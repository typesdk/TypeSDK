          android:drawable="@drawable/m4399_rec_mcard_item_off_pressed" />

    <item android:state_checked="false" android:drawable="@drawable/m4399_rec_mcard_item_off_normal" />
    <item android:state_checked="true" android:drawable="@drawable/m4399_rec_mcard_item_on_normal" />

