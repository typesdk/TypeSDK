<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/wd_bg_dialog_shape_corner">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/wd_dialog_padding">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

          

            <ImageView
                    android:id="@+id/wd_iv_exit_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/wd_ic_account_close"
                    android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <LinearLayout
                android:id="@+id/wd_ll_exit_content"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/wd_margin_10">

            <TextView
                    android:id="@+id/wd_tv_exit_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是否确认退出游戏"
                    android:textColor="@color/wd_color_blue"
                    android:textSize="@dimen/wd_text_size_20"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="@dimen/wd_margin_15"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <Button
                    android:id="@+id/wd_btn_exit_logout"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/wd_bg_account_btn_gray_selector"
                    android:text="退出"
                    android:textColor="@color/wd_color_white"
                    android:gravity="center"
                    android:textSize="@dimen/wd_text_size_18"/>

            <Button
                    android:id="@+id/wd_btn_exit_more"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/wd_bg_account_btn_blue_selector"
                    android:text="取消"
                    android:textColor="@color/wd_color_white"
                    android:layout_marginLeft="28dp"
                    android:gravity="center"
                    android:textSize="@dimen/wd_text_size_18"
            />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>