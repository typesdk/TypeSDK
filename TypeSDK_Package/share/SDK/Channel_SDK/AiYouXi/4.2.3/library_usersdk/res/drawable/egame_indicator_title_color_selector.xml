<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <!-- Non focused states -->  
    <item android:state_focused="false" android:state_pressed="false" android:state_selected="false" android:color="#aaaaaa"/>  
    <item android:state_focused="false" android:state_pressed="false" android:state_selected="true" android:color="#67bf4b"/>  
    <!-- Focused states -->  
    <item android:state_focused="true" android:state_pressed="false" android:state_selected="false" android:color="#67bf4b"/>  
    <item android:state_focused="true" android:state_pressed="false" android:state_selected="true" android:color="#67bf4b"/>  
    <!-- Pressed -->  
    <item android:state_pressed="true" android:color="#67bf4b"/>  
</selector>
