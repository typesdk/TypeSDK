<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_enabled="false">
        <shape>
            <solid android:color="@color/ch_gray" />

            <corners android:radius="1dp" />

            <stroke android:width="1dp" android:color="@color/ch_text_hint" />
        </shape>
        
    </item>
    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/ch_gray" />

            <corners android:radius="1dp" />

            <stroke android:width="1dp" android:color="@color/ch_green" />
        </shape>
        
    </item>
    <!-- 按下状态的设置 -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/ch_gray" />

            <corners android:radius="1dp" />

            <stroke android:width="1dp" android:color="@color/ch_green_p" />
        </shape>
        
    </item>

</selector>