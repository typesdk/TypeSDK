<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="85.0dip"
              android:minHeight="85.0dip"
              android:paddingLeft="6.0dip"
              android:paddingRight="6.0dip">

    <LinearLayout
        android:id="@+id/lion_activity_user_coupon_item_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="1.5dip"
        android:background="@color/lion_common_basic_red"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lion_activity_user_coupon_item_left"
            android:layout_width="125.0dip"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lion_activity_user_coupon_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/lion_common_white"
                android:textSize="16.0sp"/>

            <TextView
                android:id="@+id/lion_activity_user_coupon_item_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:gravity="center"
                android:textColor="@color/lion_common_white"
                android:textSize="10.0sp"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/lion_user_coupon_right_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="85.0dip"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20.0dip"
                        android:layout_height="20.0dip"/>

                    <TextView
                        android:id="@+id/lion_activity_user_coupon_item_game_name"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="@color/lion_common_basic_red"
                        android:textSize="16.0sp"/>

                    <ImageView
                        android:id="@+id/lion_activity_user_coupon_item_iv"
                        android:layout_width="20.0dip"
                        android:layout_height="20.0dip"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/lion_common_check_selector_circle"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/lion_activity_user_coupon_item_use_notice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.0dip"
                    android:gravity="center"
                    android:textColor="@color/lion_common_text_gray"
                    android:textSize="10.0sp"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/lion_activity_user_coupon_item_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"/>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>