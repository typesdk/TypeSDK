<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lion_activity_user_screen_shot_item_content"
        android:layout_width="match_parent"
        android:layout_height="85.0dip"
        android:minHeight="85.0dip"
        android:padding="10.0dip">

        <com.lion.ccpay.view.ScreenShotIcon
            android:id="@+id/lion_activity_user_screen_shot_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/lion_common_black"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="10.0dip">

                <TextView
                    android:id="@+id/lion_activity_user_screen_shot_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/lion_common_black"
                    android:textSize="15.0sp"/>

                <View
                    android:layout_width="0.0dip"
                    android:layout_height="0.0dip"
                    android:layout_weight="1.0"/>

                <TextView
                    android:id="@+id/lion_activity_user_screen_shot_item_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/lion_common_text_gray"
                    android:textSize="13.0sp"/>

                <View
                    android:layout_width="0.0dip"
                    android:layout_height="0.0dip"
                    android:layout_weight="1.0"/>

                <ImageView
                    android:id="@+id/lion_activity_user_screen_shot_item_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/lion_common_arrow_circle_selector"/>
            </LinearLayout>

            <TextView
                android:id="@+id/lion_activity_user_screen_shot_item_see"
                style="@style/lion_text_red_button"
                android:layout_width="65.0dip"
                android:layout_height="30.0dip"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:text="@string/lion_text_see"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lion_activity_user_screen_shot_item_menu"
        android:layout_width="match_parent"
        android:layout_height="45.0dip"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/lion_activity_user_screen_shot_item_del"
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/lion_common_down_item_selector"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/lion_icon_hit"
                android:drawablePadding="15.0dip"
                android:gravity="center|left"
                android:text="@string/lion_text_delete"
                android:textColor="@color/lion_common_white"
                android:textSize="15.0sp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="0.5dip"
            android:layout_height="match_parent"
            android:paddingTop="10.0dip"
            android:paddingBottom="10.0dip"
            android:src="@color/lion_common_white"
            android:background="@color/lion_common_down_item_nor"/>

        <LinearLayout
            android:id="@+id/lion_activity_user_screen_shot_item_share"
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/lion_common_down_item_selector"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/lion_icon_share"
                android:drawablePadding="15.0dip"
                android:gravity="center|left"
                android:text="@string/lion_text_send"
                android:textColor="@color/lion_common_white"
                android:textSize="15.0sp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>