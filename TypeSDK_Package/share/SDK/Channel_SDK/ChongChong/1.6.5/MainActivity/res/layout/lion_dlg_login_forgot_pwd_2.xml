<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            style="@style/lion_style_dlg_title"
            android:text="@string/lion_dlg_forgot_pwd" />

        <ImageView
            android:id="@+id/lion_dlg_iv_back"
            android:layout_width="50.0dip"
            android:layout_height="50.0dip"
            android:background="@drawable/lion_common_translucence_left_top_selector"
            android:scaleType="center"
            android:src="@drawable/lion_icon_return" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/lion_common_dialog_content_bg"
        android:gravity="center"
        android:orientation="vertical" >

        <include
            android:id="@+id/lion_dlg_pwd_input_one_layout"
            layout="@layout/lion_dlg_input_pwd" />

        <include
            android:id="@+id/lion_dlg_pwd_input_again_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/lion_dlg_margin"
            layout="@layout/lion_dlg_input_pwd" />

        <TextView
            android:id="@+id/lion_dlg_tv_forget_pwd_commit"
            style="@style/lion_text_red_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/lion_dlg_margin"
            android:text="@string/lion_dlg_finish" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/lion_dlg_margin"
            android:text="@string/lion_dlg_forgot_pwd_notice"
            android:textColor="@color/lion_common_text_gray"
            android:textSize="14.0sp" />
    </LinearLayout>

</LinearLayout>