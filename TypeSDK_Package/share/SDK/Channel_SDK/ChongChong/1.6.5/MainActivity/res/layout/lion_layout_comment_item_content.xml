<?xml version="1.0" encoding="utf-8"?>
<com.lion.ccpay.widget.community.CommunityCommentLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lion_layout_comment_item_content_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/lion_common_frame_two_nor"
