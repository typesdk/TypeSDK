<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/coolpad_blue" >

    <Button
        android:id="@+id/test0_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="支付0.01元" />
    <Button
        android:id="@+id/test1_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="支付0.1元" />
    <Button
        android:id="@+id/test2_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="支付1元" />
  
	<EditText android:id="@+id/price_et"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:numeric="integer"
	    android:textColor="@color/coolpad_black"
	    android:gravity="center"
	    android:text="1"/>
	
    <Button
        android:id="@+id/test3_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CP传入价格" />
    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="login" />
    <Button
        android:id="@+id/logout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="logout" />
    <Button
        android:id="@+id/pay_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="全页面" />
    <Button
        android:layout_width="match_parent"
        android:id="@+id/pay_orientation"
        android:layout_height="wrap_content"
        android:text="竖屏" />

</LinearLayout>