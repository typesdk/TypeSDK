<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="65dp"
        android:layout_centerInParent="true"
        android:background="@drawable/coolpad_roundcorner_white_bg" >

        <com.yulong.paysdk.widget.ProgressWheel
            android:id="@+id/process_bar"
            android:layout_width="45dp"
            android:layout_marginLeft="20dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:progressDrawable="@color/navigation_bg_blue" />

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/process_bar"
            android:text="登录中..."
            android:textColor="@color/text_dark_51"
            android:textSize="16sp" />
    </RelativeLayout>

</RelativeLayout>