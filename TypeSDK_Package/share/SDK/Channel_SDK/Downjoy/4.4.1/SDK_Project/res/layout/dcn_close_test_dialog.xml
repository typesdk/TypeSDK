<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dcn_shape_dialog_bg"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/dcn_payment_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dcn_title_height">


                <TextView
                    android:id="@+id/dcn_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/dcn_clost_test_title"
                    android:textColor="@color/dcn_light_black"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:id="@+id/dcn_close"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="10dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/dcn_close_btn_selector" />
                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/dcn_close_test_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/dcn_ucenter_payment_exit_msg"
                android:lineSpacingMultiplier="1.3"
                android:textColor="@color/dcn_light_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/dcn_close_server_not_open"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center_horizontal"
                android:text="@string/dcn_close_test_server_not_open"
                android:textColor="@color/dcn_red"
                android:textSize="17sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/dcn_user_enter_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dcn_login_box_bg"
                android:gravity="center"
                android:hint="@string/dcn_input_activation_code_hint"
                android:maxLength="40"
                android:minHeight="40dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:singleLine="true"
                android:textColor="@color/dcn_light_black"
                android:textColorHint="@color/dcn_login_edit_hint"
                android:textSize="@dimen/dcn_edit_text_size" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dcn_divider_size"
            android:background="@color/dcn_color_login_box_gb" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dcn_get_activation_code_button"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@color/dcn_transparent"
                android:text="@string/dcn_get_activation_code"
                android:textColor="@color/dcn_green"
                android:textSize="16sp" />

            <Button
                android:id="@+id/dcn_confirm_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@color/dcn_transparent"
                android:text="@string/dcn_ok"
                android:textColor="@color/dcn_orange_common"
                android:textSize="16sp" />


            <Button
                android:id="@+id/dcn_close_test_exit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@color/dcn_transparent"
                android:text="@string/dcn_exit_exit"
                android:textColor="@color/dcn_message_read"
                android:textSize="16sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/dcn_close_test_switch_account"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@color/dcn_transparent"
                android:text="@string/dcn_switch_account"
                android:textColor="@color/dcn_orange_common"
                android:textSize="16sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>