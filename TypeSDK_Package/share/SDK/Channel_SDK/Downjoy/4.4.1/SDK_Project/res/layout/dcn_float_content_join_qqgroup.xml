<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dcn_dialog_common_width"
    android:layout_height="@dimen/dcn_dialog_common_height"
    android:background="@drawable/dcn_shape_dialog_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dcn_dialog_common_interval">

        <TextView
            android:id="@+id/dcn_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="title"
            android:textColor="#333"
            android:textSize="16sp" />

        <Button
            android:id="@+id/dcn_close"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dcn_dialog_common_interval"
            android:background="@drawable/dcn_dialog_hint_close" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dcn_dialog_common_interval"
        android:layout_marginTop="@dimen/dcn_dialog_common_interval"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dcn_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dcn_float_quick_enter_qqgroup"
            android:textColor="#999"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ddd"/>

    <ListView
        android:id="@+id/dcn_listView"
        android:layout_width="@dimen/dcn_dialog_common_width"
        android:layout_height="170dp"
        android:dividerHeight="0dp"
        android:divider="@android:color/transparent"
         />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ddd"/>

    <TextView
        android:id="@+id/dcn_content_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:textColor="#999"
        android:textSize="15sp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/dcn_btn_set"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dcn_dialog_common_interval"
        android:layout_marginTop="@dimen/dcn_dialog_common_interval"
        android:background="@drawable/dcn_selector_dialog_btn"
        android:text="@string/dcn_dialog_common_now_set"
        android:textColor="@color/dcn_orange_common" />
</LinearLayout>