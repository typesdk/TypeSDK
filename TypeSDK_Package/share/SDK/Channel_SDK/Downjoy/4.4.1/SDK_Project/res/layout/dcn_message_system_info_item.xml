<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dcn_system_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <com.downjoy.widget.vollyextend.CircleNetworkImageView
        android:id="@+id/dcn_detail_message_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dp">

        <TextView
            android:id="@+id/dcn_detail_message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dcn_message_toright"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:textColor="#333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dcn_detail_message_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:autoLink="web"
            android:lineSpacingMultiplier="1.2"
            android:paddingRight="10dp"
            android:textColor="#666"
            android:textSize="14sp"
            android:visibility="visible" />

        <!--<FrameLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_marginLeft="5dp"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:layout_marginTop="3dp"-->
            <!--android:visibility="gone">-->

            <!--<WebView-->
                <!--android:id="@+id/dcn_detail_message_content_html"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:padding="5dp"-->
                <!--android:visibility="visible" />-->
        <!--</FrameLayout>-->


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dcn_detail_message_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dcn_message_toright"
                android:textColor="#999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/dcn_detail_message_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:paddingRight="10dp"
                android:text="@string/dcn_announcement_view_detail"
                android:textColor="@color/dcn_orange_common"
                android:textSize="14sp"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:id="@+id/dcn_detail_message_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="#ddd" />

    </LinearLayout>


</LinearLayout>