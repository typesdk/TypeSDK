<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="200dip"
        android:layout_height="65dip"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gasdk_back" >
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_share_title"
            android:textColor="@android:color/tertiary_text_light"
            android:layout_centerHorizontal="true"
            android:textSize="12sp"/>

        <ImageView
            android:id="@+id/share_qq"
            android:layout_width="30dip"
            android:layout_height="30dip"
			android:layout_toRightOf="@+id/share_view"
			android:layout_marginTop="15dip"
            android:src="@drawable/gasdk_qq_login" />
        
        <View 
            android:id="@+id/share_view"
            android:layout_width="40dip"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/share_wx"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_toLeftOf="@+id/share_view"
            android:layout_marginTop="15dip"
            android:src="@drawable/gasdk_wx_login" />
        
        <TextView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/text_share_wx"
            android:textColor="@android:color/background_dark"
            android:layout_below="@+id/share_wx"
            android:gravity="center"
            android:layout_alignLeft="@+id/share_wx"
            android:layout_alignRight="@+id/share_wx"
            android:layout_marginTop="2dip"
            android:textSize="12sp"/>
        
        <TextView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/text_share_qq"
            android:textColor="@android:color/background_dark"
            android:layout_below="@+id/share_qq"
            android:gravity="center"
            android:layout_alignLeft="@+id/share_qq"
            android:layout_alignRight="@+id/share_qq"
            android:layout_marginTop="2dip"
            android:textSize="12sp"/>
        
    </RelativeLayout>

</RelativeLayout>