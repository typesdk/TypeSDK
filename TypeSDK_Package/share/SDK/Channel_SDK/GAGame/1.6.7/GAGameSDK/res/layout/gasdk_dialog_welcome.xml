<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="290dip"
        android:layout_height="200dip"
        android:layout_centerInParent="true"
        android:background="@drawable/gasdk_login_rel" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dip"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <View
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center" />

            <ImageView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:src="@drawable/gasdk_log" />

            <View
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center" />
        </LinearLayout>

        <Button
            android:id="@+id/welcome_button_1"
            android:layout_width="260dip"
            android:layout_height="44dip"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/text_welcome_button_1"
            style="@style/text_welcome_white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="44dip"
            android:layout_alignLeft="@+id/welcome_button_1"
            android:layout_alignRight="@+id/welcome_button_1"
            android:layout_below="@+id/welcome_button_1"
            android:layout_marginTop="12dip"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/welcome_button_2"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="12"
                android:gravity="center"
                android:text="@string/text_welcome_button_2"
                style="@style/text_welcome_white" />

            <View
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" />

            <Button
                android:id="@+id/welcome_button_3"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="12"
                android:background="@drawable/gasdk_button3_rel"
                android:gravity="center"
                android:text="@string/text_welcome_button_3"
                style="@style/text_welcome_white" />
        </LinearLayout>
    </RelativeLayout>
    
</RelativeLayout>