<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="330dip"
        android:layout_height="230dip"
        android:layout_centerInParent="true"
        android:background="@drawable/gasdk_login_rel" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="38dip"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <View
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center" />

            <ImageView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:src="@drawable/gasdk_log" />

            <View
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/linearLayout1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dip"
            android:orientation="vertical" >

            <Button
                android:id="@+id/welcome1_button_1"
                style="@style/text_welcome_twitter"
                android:layout_width="240dip"
                android:layout_height="40dip"
                android:layout_marginBottom="20dp"
                android:text="@string/text_welcome1_button_1" />

            <Button
                android:id="@+id/welcome1_button_4"
                style="@style/text_welcome_white"
                android:layout_width="240dip"
                android:layout_height="40dip"
                android:text="@string/text_welcome_button_1" />

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dip"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/welcome1_button_2"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dip"
                    android:gravity="center"
                    android:src="@drawable/gasdk_qq_login" />

                <ImageView
                    android:id="@+id/welcome1_button_3"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dip"
                    android:gravity="center"
                    android:src="@drawable/gasdk_wx_login" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>