<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView
        style="@style/text_listview_username"
        android:id="@+id/login_listview_username" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dip"
        android:layout_toLeftOf="@+id/login_listview_del"
        android:layout_alignParentLeft="true"
        android:clickable="true"/>

    <ImageView
        android:id="@+id/login_listview_del"
        android:layout_width="15dip"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dip"
        android:src="@drawable/gasdk_login_del"
        android:clickable="true" />
    
    <View 
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@drawable/gasdk_login_line"
        android:layout_toLeftOf="@+id/login_listview_del"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/login_listview_del"/>

</RelativeLayout>
