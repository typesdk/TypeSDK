<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="320dip"
        android:layout_height="280dip"
        android:layout_centerInParent="true"
        android:background="@drawable/gasdk_dialog_act" >

        <LinearLayout
            android:id="@+id/dia_exit_imgbutton"
            android:layout_width="match_parent"
            android:layout_height="220dip" >

            <ImageView
                android:id="@+id/dia_exit_img"
                style="@style/text_dialog_del"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center" />
        </LinearLayout>

        <View
            android:id="@+id/dia_vie"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/dia_exit_imgbutton"
            android:background="@color/dialog_del_len" />

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/dia_vie"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/dialog_exit_back_btn"
                style="@style/text_dialog_exit_back"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/dialog_exit_back" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/dialog_del_len" />

            <TextView
                android:id="@+id/dialog_exit_yes_btn"
                style="@style/text_dialog_exit_yes"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/dialog_exit_yes" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>