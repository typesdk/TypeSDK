<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="290dip"
        android:layout_height="275dip"
        android:layout_centerInParent="true"
        android:background="@drawable/gasdk_login_rel" >

        <LinearLayout
            android:id="@+id/forgot_lin"
            android:layout_width="match_parent"
            android:layout_height="38dip"
            android:layout_alignLeft="@+id/forgot_edit_lin_1"
            android:layout_alignRight="@+id/forgot_edit_lin_1"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/forgot2_imagebutton_1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/gasdk_login_beck" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                style="@style/text_registered_title"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="22"
                android:gravity="center"
                android:textSize="23sp"
                android:text="@string/text_login_forgotpassword_title1" />

            <View
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/forgot_edit_lin_1"
            android:layout_width="260dip"
            android:layout_height="44dip"
            android:layout_below="@+id/forgot_lin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dip"
            android:background="@drawable/gasdk_edit_rel"
            android:orientation="horizontal" >

            <TextView
                style="@style/text_login_text"
                android:text="@string/text_forgot_6" />

            <EditText
                android:id="@+id/forgot_username"
                style="@style/text_username_edit"
                android:layout_width="match_parent"
                android:layout_marginRight="20dip"
                android:hint="@string/text_forgot_7" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/forgot_edit_lin_2"
            android:layout_width="260dip"
            android:layout_height="44dip"
            android:layout_below="@+id/forgot_edit_lin_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dip"
            android:background="@drawable/gasdk_edit_rel"
            android:orientation="horizontal" >

            <TextView
                style="@style/text_login_text"
                android:text="@string/login_text_2" />

            <EditText
                android:id="@+id/forgot_password_1"
                style="@style/text_password_edit" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/forgot_edit_lin_3"
            android:layout_width="260dip"
            android:layout_height="44dip"
            android:layout_below="@+id/forgot_edit_lin_2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dip"
            android:background="@drawable/gasdk_edit_rel"
            android:orientation="horizontal" >

            <TextView
                style="@style/text_login_text"
                android:text="@string/login_text_3" />

            <EditText
                android:id="@+id/forgot_password_2"
                style="@style/text_password_edit"
                android:hint="@string/registered_edit" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="44dip"
            android:layout_alignLeft="@+id/forgot_edit_lin_3"
            android:layout_alignRight="@+id/forgot_edit_lin_3"
            android:layout_below="@+id/forgot_edit_lin_3"
            android:layout_marginTop="12dip"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/forgot2_button_1"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="12"
                android:background="@drawable/gasdk_button_false"
                android:gravity="center"
                style="@style/text_welcome_white" />

            <View
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" />
            
            <Button
                android:id="@+id/forgot2_button_2"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="12"
                android:gravity="center"
                android:text="@string/text_forgot_4"
                style="@style/text_welcome_white" />
            
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>