<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="290dip"
        android:layout_height="290dip"
        android:layout_centerInParent="true"
        android:background="@drawable/gasdk_login_rel" >

        <LinearLayout
            android:id="@+id/upgrade_lin"
            android:layout_width="match_parent"
            android:layout_height="38dip"
            android:layout_alignLeft="@+id/upgrade_edit_lin_1"
            android:layout_alignRight="@+id/upgrade_edit_lin_1"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/upgrade_imagebutton_1"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/gasdk_login_beck" />

                    <View
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="2" />
                </LinearLayout>

                <View
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="4" />
            </LinearLayout>

            <TextView
                style="@style/text_registered_title"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:gravity="center"
                android:text="@string/text_upgrade" />

            <View
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center" />
        </LinearLayout>
        
        <TextView 
            android:id="@+id/upgrade_tv1"
            style="@style/text_registered_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/upgrade_lin"
            android:layout_alignLeft="@+id/upgrade_edit_lin_1"
            android:text="@string/text_upgrade_1" />
        
        <TextView 
            android:id="@+id/upgrade_tv2"
            style="@style/text_registered_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/upgrade_lin"
            android:layout_toRightOf="@+id/upgrade_tv1"
            android:layout_alignTop="@+id/upgrade_tv1"
            android:text="" />

        <LinearLayout
            android:id="@+id/upgrade_edit_lin_1"
            android:layout_width="260dip"
            android:layout_height="44dip"
            android:layout_below="@+id/upgrade_tv1"
            android:layout_centerHorizontal="true"
            android:background="@drawable/gasdk_edit_rel"
            android:orientation="horizontal" >

            <TextView
                style="@style/text_login_text"
                android:text="@string/login_text_1" />

            <EditText
                android:id="@+id/upgrade_username"
                style="@style/text_username_edit"
                android:layout_width="match_parent"
                android:layout_marginRight="20dip" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/upgrade_edit_lin_2"
            android:layout_width="260dip"
            android:layout_height="44dip"
            android:layout_below="@+id/upgrade_edit_lin_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dip"
            android:background="@drawable/gasdk_edit_rel"
            android:orientation="horizontal" >

            <TextView
                style="@style/text_login_text"
                android:text="@string/login_text_2" />

            <EditText
                android:id="@+id/upgrade_password_1"
                style="@style/text_password_edit" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/upgrade_edit_lin_3"
            android:layout_width="260dip"
            android:layout_height="44dip"
            android:layout_below="@+id/upgrade_edit_lin_2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dip"
            android:background="@drawable/gasdk_edit_rel"
            android:orientation="horizontal" >

            <TextView
                style="@style/text_login_text"
                android:text="@string/login_text_3" />

            <EditText
                android:id="@+id/upgrade_password_2"
                style="@style/text_password_edit"
                android:hint="@string/registered_edit" />
        </LinearLayout>

        <TextView
            android:id="@+id/upgrade_tv_1"
            style="@style/text_registered_1"
            android:layout_alignLeft="@+id/upgrade_edit_lin_3"
        	android:layout_below="@+id/upgrade_edit_lin_3" />

        <TextView
            android:id="@+id/upgrade_tv_2"
            style="@style/text_registered_2"
            android:layout_alignBaseline="@+id/upgrade_tv_1"
        	android:layout_alignBottom="@+id/upgrade_tv_1"
        	android:layout_toRightOf="@+id/upgrade_tv_1" />

        <Button
            android:id="@+id/upgrade_button_1"
            style="@style/text_welcome_white"
            android:layout_width="wrap_content"
            android:layout_height="44dip"
            android:layout_alignLeft="@+id/upgrade_edit_lin_3"
            android:layout_alignRight="@+id/upgrade_edit_lin_3"
            android:layout_below="@+id/upgrade_tv_1"
            android:gravity="center"
            android:text="@string/registered_button_text" />

    </RelativeLayout>

</RelativeLayout>