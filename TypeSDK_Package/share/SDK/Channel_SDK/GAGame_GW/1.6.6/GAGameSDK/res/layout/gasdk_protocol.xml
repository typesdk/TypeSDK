<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white" >

    <LinearLayout
        android:id="@+id/protocol_lin"
        android:layout_width="match_parent"
        android:layout_height="36dip"
        android:background="@color/button_state_pressed_false"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img_button_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dip"
                android:src="@drawable/gasdk_protocol_beck" />
        </LinearLayout>

        <TextView
            style="@style/text_protocol_title"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:gravity="center"
            android:text="@string/protocol_title" />

        <View
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" />
    </LinearLayout>

    <TextView
        android:id="@+id/protocol_tv"
        style="@style/text_protocol_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/protocol_lin"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="5dip"
        android:text="@string/protocol_tv1" />

    <TextView
        android:id="@+id/protocol_buton_3"
        style="@style/text_protocol_button_tv"
        android:layout_width="60dip"
        android:layout_height="25dip"
        android:layout_below="@+id/protocol_tv"
        android:layout_marginLeft="1dip"
        android:layout_marginTop="5dip"
        android:background="@drawable/gasdk_protocol_button"
        android:gravity="center"
        android:text="@string/protocol_button_tv3" />

    <TextView
        android:id="@+id/protocol_buton_4"
        style="@style/text_protocol_button_tv"
        android:layout_width="60dip"
        android:layout_height="25dip"
        android:layout_below="@+id/protocol_tv"
        android:layout_marginLeft="1dip"
        android:layout_marginTop="5dip"
        android:layout_toRightOf="@+id/protocol_buton_3"
        android:background="@drawable/gasdk_protocol_button"
        android:gravity="center"
        android:text="@string/protocol_button_tv4"
        android:visibility="gone" />

    <TextView
        android:id="@+id/protocol_buton_5"
        style="@style/text_protocol_button_tv"
        android:layout_width="60dip"
        android:layout_height="25dip"
        android:layout_below="@+id/protocol_tv"
        android:layout_marginLeft="1dip"
        android:layout_marginTop="5dip"
        android:layout_toRightOf="@+id/protocol_buton_4"
        android:background="@drawable/gasdk_protocol_button"
        android:gravity="center"
        android:text="@string/protocol_button_tv5"
        android:visibility="gone" />

    <View
        android:id="@+id/v"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/protocol_buton_3"
        android:layout_marginLeft="4dip"
        android:layout_marginRight="4dip"
        android:background="@drawable/gasdk_protocol_view" />
    
    <TextView 
        style="@style/text_protocol_bady_tv"
        android:id="@+id/protocol_bady_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v"
        android:gravity="center"/>
    
    <ScrollView 
        android:id="@+id/scrollView1"  
        android:layout_width="match_parent"  
        android:layout_height="match_parent"
        android:layout_below="@+id/protocol_bady_title_tv">
        
        <TextView 
	        style="@style/text_protocol_bady_tv"
	        android:id="@+id/protocol_body_tv"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" />
        
    </ScrollView>
    
    

</RelativeLayout>