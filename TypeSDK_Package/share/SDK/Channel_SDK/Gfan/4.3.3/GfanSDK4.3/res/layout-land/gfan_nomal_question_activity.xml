<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_relative_layout"
    style="@style/gfan_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/gfan_title_style"
        android:id="@+id/tv_nomalquestion_title"
        android:text="用户常见问题"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/gfan_uc_view_space_small"
        android:layout_weight="6"
        android:background="@drawable/gfan_nomal_questions_bg"
        android:padding="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_questions_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>


    <TextView
        android:id="@+id/tv_nomalquestion_communication"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:text="如果没能解决您的问题，请联系客服，客服QQ群：21527016"
        android:textColor="#b9bcbf" />
</LinearLayout>
