<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/zzz_a_coin_list_item_height"
                android:background="@color/zzz_white">

    <TextView
        android:id="@+id/zzz_record_item_channel"
        style="@style/zzz_MoneyListItemTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/zzz_record_item_num_margin_left"
        android:layout_marginTop="@dimen/zzz_record_item_num_margin_top"
        android:textSize="@dimen/zzz_record_item_channel_text_size"/>
    <TextView
        android:id="@+id/zzz_record_item_time"
        style="@style/zzz_MoneyListItemTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/zzz_record_item_num_margin_top"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/zzz_record_item_num"
        android:layout_marginLeft="@dimen/zzz_record_item_num_margin_left"
        android:paddingBottom="@dimen/zzz_record_item_time_padding_bottom"
        android:textColor="@color/zzz_money_list_item_time_color"
        android:textSize="@dimen/zzz_record_item_time_text_size"/>


    <TextView
        android:id="@+id/zzz_record_item_num"
        style="@style/zzz_MoneyListItemTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/zzz_record_item_channel_margin_right"
        android:layout_marginTop="@dimen/zzz_record_item_num_margin_top"
        android:textSize="@dimen/zzz_record_item_num_text_size"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/zzz_record_item_num_margin_left"
        android:layout_marginRight="@dimen/zzz_record_item_channel_margin_right"
        android:layout_below="@+id/zzz_gift_remainder_text"
        android:background="@color/zzz_seperate_line_color"/>
</RelativeLayout>