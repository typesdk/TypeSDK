<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/zzz_permission_dialog_width"
        android:layout_height="@dimen/zzz_permission_dialog_height"
        android:background="@drawable/zzz_permission_white_shap"
        android:orientation="vertical"
        android:paddingBottom="@dimen/zzz_permission_dialog_padding_vertical"
        android:paddingLeft="@dimen/zzz_permission_dialog_padding_horizon"
        android:paddingRight="@dimen/zzz_permission_dialog_padding_horizon"
        android:paddingTop="10dip">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/zzz_permission_setting_title"
                android:textColor="@color/zzz_permission_text_color"
                android:textSize="@dimen/zzz_permission_text_size_14"/>

        <TextView
                android:id="@+id/zzz_request_permission_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/zzz_request_permission_close_btn"/>
    </RelativeLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/zzz_permission_content_margin_top"
            android:text="@string/zzz_overlay_permission_content"
            android:textColor="@color/zzz_permission_text_color"
            android:textSize="@dimen/zzz_permission_text_size_13"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zzz_permission_button_height"
            android:layout_marginTop="@dimen/zzz_permission_button_margin_top">
        <TextView
                android:id="@+id/zzz_permission_cancel"
                android:layout_width="@dimen/zzz_permission_button_width"
                android:layout_height="@dimen/zzz_permission_button_height"
                android:background="@drawable/zzz_float_button_grey"
                android:gravity="center"
                android:text="@string/zzz_cancel"
                android:textColor="@color/zzz_white"
                android:textSize="@dimen/zzz_permission_text_size_14"/>
        <TextView
                android:id="@+id/zzz_go_setting"
                android:layout_width="@dimen/zzz_permission_button_width"
                android:layout_height="@dimen/zzz_permission_button_height"
                android:layout_alignParentRight="true"
                android:background="@drawable/zzz_float_button_green"
                android:gravity="center"
                android:text="@string/zzz_setting"
                android:textColor="@color/zzz_white"
                android:textSize="@dimen/zzz_permission_text_size_14"/>
    </RelativeLayout>
</LinearLayout>