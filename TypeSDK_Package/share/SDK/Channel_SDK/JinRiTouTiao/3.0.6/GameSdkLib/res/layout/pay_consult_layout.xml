<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/pay_dialog_item_divider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:orientation="horizontal" >
        <TextView 
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/pay_consult_label_color"
            android:textSize="@dimen/pay_consult_text_size"
            android:text="@string/pay_consult_label"
            android:singleLine="true"
            android:ellipsize="end"/>
        <TextView 
            android:id="@+id/telephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/pay_consult_telephone_color"
            android:textSize="@dimen/pay_consult_text_size"
            android:text="@string/pay_consult_telephone"
            android:singleLine="true"
            android:ellipsize="end"/>
    </LinearLayout>
</LinearLayout>
