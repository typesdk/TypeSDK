<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/kg_common_transparent"
    android:orientation="horizontal" >

    <View
        android:id="@+id/kg_view_left"
        android:layout_width="20dp"
        android:layout_height="3px"
        android:layout_marginTop="25dp"
        android:visibility="gone" />

    <View
        android:id="@+id/kg_view_left_line"
        android:layout_width="15dp"
        android:layout_height="3px"
        android:layout_marginTop="25dp"
        android:background="@drawable/kg_img_toolber_link_line" />

    <RelativeLayout
        android:id="@+id/kg_game_center_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:paddingTop="5dp" >

        <ImageView
            android:id="@+id/kg_img_game_center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/kg_toolbar_game_center_seletor" />

        <TextView
            android:id="@+id/kg_tv_game_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/kg_img_game_center"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/kg_game_center_1"
            android:textColor="@color/kg_common_white"
            android:textSize="10sp" />
    </RelativeLayout>

    <View
        android:id="@+id/kg_toolbar_giftbag_link_line"
        android:layout_width="15dp"
        android:layout_height="3px"
        android:layout_marginTop="25dp"
        android:background="@drawable/kg_img_toolber_link_line" />

    <RelativeLayout
        android:id="@+id/kg_layout_gift_bag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:paddingTop="5dp" >

        <ImageView
            android:id="@+id/kg_iv_gift_bag"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/kg_seletor_toolbar_giftbag" />

        <TextView
            android:id="@+id/kg_tv_gift_bag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/kg_iv_gift_bag"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/kg_gift_bag"
            android:textColor="@color/kg_common_white"
            android:textSize="10sp" />
    </RelativeLayout>

    <View
        android:layout_width="15dp"
        android:layout_height="3px"
        android:layout_marginTop="25dp"
        android:background="@drawable/kg_img_toolber_link_line" />

    <RelativeLayout
        android:id="@+id/kg_layout_game_forum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:paddingTop="5dp" >

        <ImageView
            android:id="@+id/kg_iv_game_forum"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/kg_seletor_toolbar_game_forum" />

        <TextView
            android:id="@+id/kg_tv_game_forum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/kg_iv_game_forum"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/kg_game_bbs"
            android:textColor="@color/kg_common_white"
            android:textSize="10sp" />
    </RelativeLayout>

    <View
        android:layout_width="15dp"
        android:layout_height="3px"
        android:layout_marginTop="25dp"
        android:background="@drawable/kg_img_toolber_link_line" />

    <RelativeLayout
        android:id="@+id/kg_user_center_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:paddingTop="5dp" >

        <ImageView
            android:id="@+id/kg_img_user_center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/kg_toolbar_user_center_seletor" />

        <TextView
            android:id="@+id/kg_tv_user_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/kg_img_user_center"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/kg_user_center"
            android:textColor="@color/kg_common_white"
            android:textSize="10sp" />
    </RelativeLayout>

    <View
        android:id="@+id/kg_set_login_psd_line"
        android:layout_width="15dp"
        android:layout_height="3px"
        android:layout_marginTop="25dp"
        android:background="@drawable/kg_img_toolber_link_line" />

    <RelativeLayout
        android:id="@+id/kg_set_login_psd_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:paddingTop="5dp" >

        <ImageView
            android:id="@+id/kg_iv_set_login_psd"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/kg_titlebar_btn_selector"
            android:src="@drawable/kg_toolbar_set_login_psd" />

        <TextView
            android:id="@+id/kg_tv_set_login_psd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/kg_iv_set_login_psd"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/kg_create_login_psd"
            android:textColor="@color/kg_common_white"
            android:textSize="10sp" />
    </RelativeLayout>

    <View
        android:id="@+id/kg_view_right_line"
        android:layout_width="15dp"
        android:layout_height="3px"
        android:layout_marginTop="25dp"
        android:background="@drawable/kg_img_toolber_link_line"
        android:visibility="gone" />

    <View
        android:id="@+id/kg_view_right"
        android:layout_width="20dp"
        android:layout_height="3px"
        android:layout_marginTop="25dp" />

</LinearLayout>