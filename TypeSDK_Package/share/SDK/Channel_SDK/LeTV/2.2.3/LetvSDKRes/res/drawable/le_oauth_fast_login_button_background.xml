<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/le_oauth_orange_dark" />

            <corners android:radius="24dp" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/le_oauth_orange_light" />

            <corners android:radius="24dp" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="24dp" />

            <solid android:color="@color/le_oauth_orange" />
        </shape>
    </item>

</selector>