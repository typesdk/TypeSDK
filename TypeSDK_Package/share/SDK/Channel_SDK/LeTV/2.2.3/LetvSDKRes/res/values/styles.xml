<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 登录部分 -->
    <style name="LeOauthAppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:windowNoTitle">false</item>
        <item name="android:actionBarStyle">@style/LeOauthAccountActionBarStyle</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="LeOauthAccountActionBarStyle">
        <item name="android:background">@color/le_oauth_status_bar_background</item>
        <item name="android:titleTextStyle">@style/LeOauthAcBarTitleStyle</item>
        <item name="android:displayOptions">homeAsUp|showTitle</item>
    </style>

    <style name="LeOauthAcBarTitleStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Application theme. -->
    <style name="LeOauthAppTheme" parent="LeOauthAppBaseTheme">
        <!--  <item name="android:windowBackground">@color/main_content_background_color</item> -->
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="LeOauthNoTitleBarTheme">
        <item name="android:windowBackground">@color/le_oauth_main_content_background_color</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="LeOauthAccountManagerSlogan">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/le_oauth_account_manager_slogan_color</item>
    </style>

    <style name="LeOauthAccountManagerOtherLogin">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/le_oauth_account_manager_other_login_text_color</item>
    </style>

    <style name="LeOauthAccountManagerMainTitle">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/le_oauth_account_manager_main_title_text_color</item>
    </style>

    <style name="LeOauthAccountManagerUserName">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/le_oauth_account_manager_main_title_text_color</item>
    </style>


    <!-- 支付部分 -->
    <style name="LePayCommonDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="lepay_fillparent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="lepay_wrapparent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="lepay_width_fillparent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="lepay_height_fillparent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <!-- 信用卡输入框布局 -->
    <style name="lepay_card_edit_layout">
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:layout_marginRight">14dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <!-- 底部按钮样式 -->
    <style name="lepay_button_bottom_margin">
        <item name="android:layout_marginLeft">15dip</item>
        <item name="android:layout_marginRight">15dip</item>
        <item name="android:layout_marginTop">17.5dip</item>
    </style>

    <style name="lepay_cashier_button_bottom_margin">
        <item name="android:layout_marginLeft">12dip</item>
        <item name="android:layout_marginRight">12dip</item>
        <item name="android:layout_marginTop">13dip</item>
    </style>

    <!-- 页面通用布局样式 -->
    <style name="lepay_page_layout_margin">
        <item name="android:layout_marginLeft">15dip</item>
        <item name="android:layout_marginRight">15dip</item>
        <item name="android:layout_marginTop">17.5dip</item>
    </style>

    <!-- Application theme. -->
    <style name="MspAppTheme" parent="MspAppBaseTheme">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="MspAppBaseTheme" parent="android:Theme.Light.NoTitleBar">
        <!-- API 11 theme customizations can go here. -->
    </style>

    <style name="Widget.GDProgressBar.Small" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@drawable/progress_small_black</item>
        <item name="android:minWidth">20dp</item>
        <item name="android:maxWidth">20dp</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">20dp</item>
    </style>

    <style name="baseAppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/lepay_white</item>
    </style>

    <style name="lepay_customDialog.Theme" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="InputTextView">
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="KeyboardTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">@drawable/lepay_keyboard_num_selector</item>
    </style>

    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!-- LeTopSlideToast -->

    <style name="leTopSlideToast">
        <item name="@android:windowEnterAnimation">@anim/le_topslidetoast_anim_toast_enter</item>
        <item name="@android:windowExitAnimation">@anim/le_topslidetoast_anim_toast_exit</item>
    </style>

    <style name="SdkDialogStyle" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="DialogFullscreen" parent="android:Animation">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_anim</item>
    </style>

    <!-- 悬浮窗Activity 百分之80透明度 -->
    <style name="LeFloatActivityTranslucent_80" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowBackground">@color/lesdk_transparent_80</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <!-- 悬浮窗Activity  全透明 -->
    <style name="LeFloatActivityTranslucent" parent="@android:style/Theme.Translucent.NoTitleBar.Fullscreen">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>
</resources>