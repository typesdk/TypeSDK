<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b0000000" >

    <RelativeLayout
        android:id="@+id/rl_login"
        android:layout_width="fill_parent"
        android:layout_height="230dip"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="@drawable/sdk_edit_two_bg"
        
        android:paddingBottom="10dip"
        android:paddingLeft="18dip"
        android:paddingRight="18dip"
        
        
         >

         <LinearLayout
            android:id="@+id/ll_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:background="#ffffff"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="0.0px"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1.0"
                android:src="@drawable/logo" />

            <TextView
                android:layout_width="1dip"
                android:layout_height="40dp"
                android:background="@color/gray5" />

            <TextView
                android:id="@+id/tv_copy"
                android:layout_width="0.0px"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1.0"
                android:gravity="center|left"
                android:text="@string/str_one_register"
                android:textColor="@color/blues"
                android:textSize="18dp" />
        </LinearLayout>
	
         
        <LinearLayout
            android:id="@+id/ll_login_frame"
            android:layout_width="fill_parent"
            android:layout_height="81dp"
            android:layout_below="@id/ll_logo"
            android:background="@drawable/sdk_edit_two_bg"
            
            android:orientation="vertical" >
       
             <EditText
                android:id="@+id/et_username"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:background="@drawable/sdk_edit_three_bg"
                android:hint="请输入帐号"
                android:textColorHint="#c8c8c8"
                android:textSize="15dip"
                android:textColor="#000000"
                android:paddingLeft="10dip"
                android:paddingRight="30dip"
                android:selectAllOnFocus="true"
                android:singleLine="true" /> 

            

           
      
		 <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray5" />
       

            <EditText
                android:id="@+id/et_pwd"
                 android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:background="@null"
                android:hint="请输入密码"
                android:textColorHint="#c8c8c8"
                android:textSize="15dip"
                android:textColor="#000000"
                android:paddingLeft="10dip"
                android:paddingRight="30dip"
                android:selectAllOnFocus="true"
                android:singleLine="true"  />
		
           
       
          
             
        </LinearLayout>
		
       
        <Button
            android:id="@+id/btn_game_in"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_below="@id/ll_login_frame"
           
            android:background="@drawable/sdk_login_in"
            android:text="@string/str_complete_register"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/btn_game_in"
            android:layout_marginTop="10dip" >
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" 
                >

                <TextView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    
                    android:layout_marginTop="5dp"
                    android:background="@drawable/dialog_checkbox_checked"
                    android:textColor="@color/blacks"
                    />

                <TextView
                    android:id="@+id/tv_user_aggrement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                 
                    android:layout_marginLeft="3dp"
                    android:textSize="14sp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/blacks"
                    android:text="@string/str_user_agreement" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_cut"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_width="80dip"
                android:layout_height="20dip"
                android:layout_marginTop="3dp"
                android:layout_marginRight="5dp"
                android:text="@string/str_back_login"
                android:textSize="14sp"
                android:textColor="@color/blacks" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/xs_login_right" />
            
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>