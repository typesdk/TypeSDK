<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingLeft="@dimen/f_padding_lr"
                android:paddingRight="@dimen/f_padding_lr"
                android:paddingTop="@dimen/mg_forum_item_video_padding_top"
                android:paddingBottom="@dimen/mg_forum_item_video_padding_bottom">

    <!--<include android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/videoLayout"
             layout="@layout/video_layout"/>-->


    <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
               android:id="@+id/cover"
               android:src="@drawable/main_normal_icon"
               android:scaleType="fitXY"
               android:visibility="visible"/>

    <ImageView
            android:id="@+id/play"
            android:layout_width="@dimen/video_play_center_size"
            android:layout_height="@dimen/video_play_center_size"
            android:layout_centerInParent="true"
            android:background="@drawable/mediacontroller_play_center"/>

