<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:gravity="center"
              android:background="@android:color/white"
              android:orientation="vertical">

    <view class="com.papa91.pay.widget.CircleImageView"
          android:id="@+id/itemImg"
          android:layout_width="42dp"
          android:layout_height="42dp"
          android:layout_centerInParent="true"
          android:src="@drawable/main_normal_icon"
            />
          <!--app:border_width="@dimen/mg_forum_avatar_round_stroke_width"-->
          <!--app:border_color="@color/mg_forum_avatar_round_stroke_color"-->

    <TextView
            android:id="@+id/itemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextViewStyle_12sp"
            android:textColor="#3b3b3b"
            android:layout_marginTop="12dp"
            android:text=""
            android:singleLine="true"
            android:maxEms="10"/>

</LinearLayout>