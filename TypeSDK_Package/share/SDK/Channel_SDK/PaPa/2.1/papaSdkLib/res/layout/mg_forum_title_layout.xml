<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/mg_forum_title_layout_actionbar_height"
                android:background="@android:color/white">

    <ImageView
            android:layout_width="42dp"
            android:layout_height="45dp"
            android:id="@+id/back_image"
            android:layout_centerVertical="true"
            android:src="@drawable/back_icon"
            android:visibility="visible"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"/>

    <!--社区左上角菜单-->
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/forumMoreFunc"
            android:clickable="true"
            android:layout_centerVertical="true"
            android:visibility="gone">


        <ImageView
                android:layout_width="26dp"
                android:layout_height="18dp"
                android:id="@+id/forumMoreFuncImg"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/f_padding_lr"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="6dp"
                android:src="@drawable/more"/>

    </RelativeLayout>

    <!--分享-->
    <LinearLayout
            android:id="@+id/layout_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:visibility="gone"
            android:gravity="center">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享"
                android:id="@+id/share_textview"
                android:textColor="@color/main_yello_color"
                android:textSize="18sp"
                android:visibility="gone"
        />

        <ImageView
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:id="@+id/shareImg"
                android:layout_centerVertical="true"
                android:src="@drawable/papa_share_selecter"
                android:visibility="visible"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"/>

    </LinearLayout>

    <!--我的消息-->
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/myProfileMessage"
            android:visibility="gone"
            android:layout_toRightOf="@+id/forumMoreFunc"
            android:layout_marginLeft="5dp"
            android:clickable="true">

        <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:id="@+id/profileMessageImage"
                android:layout_centerVertical="true"
                android:padding="6dp"
                android:src="@drawable/profile_message"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/round_large_size"
                android:id="@+id/profileMessageFlag"
                android:layout_alignRight="@+id/profileMessageImage"
                android:layout_alignTop="@+id/profileMessageImage"
                android:background="@drawable/message_round"
                android:layout_marginTop="2dp"
                android:text=""
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="8sp"
                android:visibility="gone"
                android:layout_marginRight="4dp"/>

        <TextView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:id="@+id/profileMessageFlagNoNum"
                android:layout_alignRight="@+id/profileMessageImage"
                android:layout_alignTop="@+id/profileMessageImage"
                android:background="@drawable/message_round"
                android:layout_marginTop="2dp"
                android:text=""
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="8sp"
                android:visibility="gone"
                android:layout_marginRight="4dp"/>

    </RelativeLayout>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/forum_title_center"
              android:gravity="center"
              android:textColor="#4d4d4d"
              android:textSize="18sp"
              android:layout_centerInParent="true"
              android:text="社区"
              android:visibility="gone"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/layout_title"
              android:gravity="center"
              android:textColor="#4d4d4d"
              android:textSize="18sp"
              android:layout_toRightOf="@id/back_image"
              android:layout_centerVertical="true"
              android:text=""/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="45dp"
              android:id="@+id/layout_title_right"
              android:gravity="center"
              android:textColor="#3a85e2"
              android:textSize="14dp"
              android:layout_marginRight="11dp"
              android:layout_centerVertical="true"
              android:layout_alignParentRight="true"
              android:text=""/>
    <!--android:layout_marginLeft="5dp"-->

    <ImageView
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:id="@+id/forum_post"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/forum_post"
            android:visibility="gone"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="14dp"/>

    <ImageView
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:id="@+id/release"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/release"
            android:visibility="gone"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="14dp"/>

    <ImageView
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:id="@+id/backToGame"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/back_to_game"
            android:visibility="gone"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="14dp"/>

    <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent"
                  android:orientation="horizontal"
                  android:id="@+id/postFunction"
                  android:layout_centerVertical="true"
                  android:layout_alignParentRight="true"
                  android:gravity="center_vertical"
                  android:layout_marginRight="10dp"
                  android:visibility="gone">

        <ImageView
                android:layout_width="62dp"
                android:layout_height="50dp"
                android:id="@+id/postFuncHost"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/post_host"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>


        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:minHeight="50dp"
                  android:minWidth="45dp"
                  android:id="@+id/postFuncMore"
                  android:gravity="center"
                  android:textColor="#3a85e2"
                  android:textSize="14dp"
                  android:layout_centerInParent="true"
                  android:text="更多"
                  android:layout_marginLeft="6dp"
                  android:clickable="true"
        />

    </LinearLayout>

    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_alignParentBottom="true"
          android:background="#ebebeb"/>

</RelativeLayout>