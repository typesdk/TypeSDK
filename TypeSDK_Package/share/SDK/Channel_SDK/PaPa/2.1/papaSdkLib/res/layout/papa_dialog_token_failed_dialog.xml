<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
             android:gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:minWidth="@dimen/dp861"
        >
<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:id="@+id/title"
        android:text="身份验证失败"
        android:textSize="@dimen/dp48"
        android:textColor="#3b3b3b"
        />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无法继续浏览页面，请退出游戏重新登录"
            android:id="@+id/message"
            android:textColor="#3b3b3b"
            android:textSize="@dimen/dp40"
            />

    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/papa_dialog_line"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <!--取消支付-->

        <!--继续支付-->
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">
            <ImageView
                    android:id="@+id/exitCertainBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/papa_pay_btn"
                    android:minWidth="@dimen/dp448"
                    android:scaleType="fitXY"
                    />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="回到游戏"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true"
                    android:id="@+id/huida"
                    />
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>