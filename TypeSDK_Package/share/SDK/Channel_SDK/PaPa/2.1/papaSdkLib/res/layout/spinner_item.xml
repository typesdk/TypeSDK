<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="@dimen/dp105"
              android:paddingLeft="@dimen/dp22"
              android:paddingRight="@dimen/dp22"
              android:background="@color/white"
        >

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            >

        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/acountId"
                android:textSize="@dimen/sp36"
                android:textColor="#8a8a8a"
                android:layout_weight="1"
                android:gravity="center_vertical"
                />

        <ImageView
                android:layout_width="@dimen/dp105"
                android:layout_height="match_parent"
                android:id="@+id/dellAccount"
                android:src="@drawable/dell_history_butn"
                android:layout_weight="0"
                android:padding="@dimen/dp27"
                />
    </LinearLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/textView"
            android:background="#d1d1d1"
            android:visibility="gone"
            />
</LinearLayout>