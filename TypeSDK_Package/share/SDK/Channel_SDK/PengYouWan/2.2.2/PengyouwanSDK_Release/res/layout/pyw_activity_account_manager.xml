<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pyw_common_white"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <include
        android:id="@+id/pyw_layout_common_title"
        layout="@layout/pyw_common_title_bar" />

    <GridView
        android:id="@+id/pyw_view_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="@dimen/pyw_dp_51"
        android:listSelector="@color/pyw_common_transparent"
        android:numColumns="3"
        android:scrollbars="none"
        android:paddingTop="33dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="13dp"
        android:verticalSpacing="@dimen/pyw_dp_51" >
    </GridView>

</LinearLayout>