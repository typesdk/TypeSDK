<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gridpv="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/pyw_dp_942"
    android:layout_height="match_parent"
    android:background="@drawable/pyw_img_dialogcontent_bg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/pyw_dp_75" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pyw_dp_128"
        android:background="@drawable/pyw_img_dialogtitle_bg" >

        <TextView
            android:id="@+id/pyw_tv_common_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/pyw_common_gray_light"
            android:textSize="@dimen/pyw_common_large" />

        <ImageView
            android:id="@+id/pyw_iv_close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/pyw_dp_42"
            android:paddingRight="@dimen/pyw_dp_42"
            android:src="@drawable/pyw_img_close" />
    </RelativeLayout>

    <View
        android:id="@+id/pyw_view_divider"
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@color/pyw_common_item_divider" />

    <TextView
        android:id="@+id/pyw_tv_input_paypsd_paymoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="23dp"
        android:text="1111"
        android:textColor="#444444"
        android:textSize="@dimen/pyw_common_super"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pyw_tv_input_paypsd_voucher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="1111"
        android:textColor="#999999"
        android:textSize="@dimen/pyw_common_adapter_little" />

    <com.pengyouwan.sdk.ui.widget.gridpasswordview.GridPasswordView
        android:id="@+id/pyw_gv_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pyw_common_btn_height"
        android:layout_marginLeft="@dimen/pyw_dp_49"
        android:layout_marginRight="@dimen/pyw_dp_49"
        android:layout_marginTop="15dp"
        gridpv:lineColor="#dbdbdb"
        gridpv:lineWidth="1px" />

</LinearLayout>