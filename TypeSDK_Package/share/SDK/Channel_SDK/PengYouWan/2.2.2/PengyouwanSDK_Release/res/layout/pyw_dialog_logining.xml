<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pyw_login_dialog_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pyw_dp_132"
        android:background="#cc000000"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/pyw_tv_account_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingRight="@dimen/pyw_dp_60"
            android:textColor="@color/pyw_logining_txt_color"
            android:textSize="@dimen/pyw_common_medium" />

        <Button
            android:id="@+id/pyw_btn_dialog_switch"
            android:layout_width="@dimen/pyw_dp_204"
            android:layout_height="@dimen/pyw_dp_75"
            android:background="@drawable/pyw_shape_switch_radius_bg"
            android:text="切换账号"
            android:textColor="@color/pyw_logining_btn_txt_color"
            android:textSize="@dimen/pyw_common_small" />
    </LinearLayout>

</RelativeLayout>