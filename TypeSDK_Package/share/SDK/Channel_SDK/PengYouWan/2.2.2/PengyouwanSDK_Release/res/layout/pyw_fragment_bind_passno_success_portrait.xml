<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pyw_login_dialog_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pyw_common_white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pyw_dp_75"
        android:src="@drawable/pyw_img_bind_success_icon" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/pyw_dp_105"
        android:paddingTop="@dimen/pyw_dp_75" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="友友的游戏账号已绑定成功了哟！"
            android:textColor="@color/pyw_common_gray_darker"
            android:textSize="@dimen/pyw_common_large" />

        <TextView
            android:id="@+id/pyw_tv_passcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pyw_dp_39"
            android:text="您的手机："
            android:textColor="@color/pyw_common_gray_lighter"
            android:textSize="@dimen/pyw_common_medium" />

        <TextView
            android:id="@+id/pyw_tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/pyw_dp_18"
            android:text="您可以使用手机号码登录朋友玩和所有游戏"
            android:textColor="@color/pyw_common_gray_lighter"
            android:textSize="@dimen/pyw_common_medium" />
    </LinearLayout>

    <Button
        android:id="@+id/pyw_btn_back_usercenter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pyw_common_btn_height"
        android:background="@drawable/pyw_selector_btn_blue_bg"
        android:text="返回"
        android:textColor="@color/pyw_common_white"
        android:textSize="@dimen/pyw_common_large" />

</LinearLayout>