<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pywlayout="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/pyw_layout_myvoucher_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pyw_dp_228"
        android:layout_marginLeft="@dimen/pyw_dp_30"
        android:layout_marginRight="@dimen/pyw_dp_30"
        android:layout_marginTop="@dimen/pyw_dp_24"
        android:background="@drawable/pyw_selector_voucher_bg"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/pyw_dp_15"
            android:background="@drawable/pyw_shape_radius_content_bg" >

            <RelativeLayout
                android:id="@+id/pyw_iv_game_icon"
                android:layout_width="@dimen/pyw_dp_312"
                android:layout_height="match_parent"
                android:gravity="center" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/pyw_tv_myvoucher_sign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:paddingTop="3dp"
                        android:text="ï¿¥"
                        android:textColor="@color/pyw_common_orange_lighter"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/pyw_tv_myvoucher_idnum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginLeft="4dp"
                        android:layout_toRightOf="@id/pyw_tv_myvoucher_sign"
                        android:text="100"
                        android:textColor="@color/pyw_common_orange_lighter"
                        android:textSize="21sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/pyw_dp_15"
                android:layout_marginTop="@dimen/pyw_dp_15"
                android:background="@color/pyw_common_item_divider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/pyw_dp_18"
                android:paddingLeft="@dimen/pyw_dp_30"
                android:paddingTop="@dimen/pyw_dp_18" >

                <TextView
                    android:id="@+id/pyw_tv_myvoucher_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#acacb6"
                    android:gravity="center_vertical"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/pyw_tv_myvoucher_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pyw_tv_myvoucher_money"
                    android:layout_marginTop="@dimen/pyw_dp_15"
                    android:singleLine="true"
                    android:textColor="#acacb6"
                    android:textSize="11sp" /> 

                <TextView
                    android:id="@+id/pyw_tv_myvoucher_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:textColor="#acacb6"
                    android:textSize="11sp" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>