<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <!-- 这是陈杰写的 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1px"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        
        <LinearLayout
            android:id="@+id/pyw_layout_select_account"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@color/pyw_common_white"
            android:paddingLeft="20dp"
            android:gravity="center" >

            <ImageView
                android:id="@+id/pyw_iv_arrow"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:scaleType="centerInside"
                android:src="@drawable/pyw_img_myvoucher_arrow_down" />
        </LinearLayout>

        <TextView
            android:id="@+id/pyw_tv_head"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/pyw_common_white"
            android:gravity="center_vertical"
            android:paddingRight="20dp"
            android:text="可使用"
            android:textColor="@color/pyw_common_gray_light"
            android:textSize="@dimen/pyw_common_large" />

        
    </LinearLayout>

    <View
        android:id="@+id/pyw_view_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/pyw_common_item_divider" />

</LinearLayout>