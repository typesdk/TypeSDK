<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white" >

    <RelativeLayout
        android:id="@+id/passport_activity_base_title"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:layout_alignParentTop="true" >

        <FrameLayout
            android:id="@+id/passport_activity_base_title_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="3dip"
            android:visibility="visible" >

            <ImageView
                android:id="@+id/passport_activity_base_title_left_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip" />

            <TextView
                android:id="@+id/passport_activity_base_title_left_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip" />
        </FrameLayout>

        <TextView
            android:id="@+id/passport_activity_base_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <FrameLayout
            android:id="@+id/passport_activity_base_title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="3dip"
            android:visibility="visible" >

            <ImageView
                android:id="@+id/passport_activity_base_title_right_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip" />

            <TextView
                android:id="@+id/passport_activity_base_title_right_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip" />
        </FrameLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/passport_activity_base_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/passport_activity_base_title" />

    <RelativeLayout
        android:id="@+id/passport_activity_base_toast"
        android:layout_width="fill_parent"
        android:layout_height="19dip"
        android:layout_below="@id/passport_activity_base_title"
        android:background="#bf0100"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/passport_activity_base_toast_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/passport_icon_warning"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout>