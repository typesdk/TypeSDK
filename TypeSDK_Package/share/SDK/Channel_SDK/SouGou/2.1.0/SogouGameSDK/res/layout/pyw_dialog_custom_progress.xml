<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pyw_layout_loading"
    android:layout_width="200dp"
    android:layout_height="120dp"
    android:gravity="center"
    android:background="@drawable/pyw_img_translucence_bg"
    android:minHeight="@dimen/pyw_common_item_height"
    android:orientation="vertical" >

    <com.pengyouwan.sdk.ui.widget.LoadingView
        android:id="@+id/pyw_progress_loading_bar"
        android:src="@drawable/pyw_img_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/pyw_tv_loading_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:text="正在加载……"
        android:textColor="@color/pyw_common_white"
        android:textSize="@dimen/pyw_common_medium" />

</LinearLayout>