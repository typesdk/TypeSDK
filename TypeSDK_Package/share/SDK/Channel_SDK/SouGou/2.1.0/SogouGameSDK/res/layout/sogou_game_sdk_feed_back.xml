<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/sogou_game_sdk_main_background_color"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include layout="@layout/sogou_game_sdk_head" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="12dp" >

            <TextView
                android:id="@+id/sogou_game_sdk_feed_back_contact_label"
                style="@style/sogou_game_sdk_list_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/sogou_game_sdk_feed_back_contact_label" />

            <EditText
                android:id="@+id/sogou_game_sdk_feed_back_contact_input"
                style="@style/sogou_game_sdk_input_font"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/sogou_game_sdk_feed_back_contact_label"
                android:background="@drawable/sogou_game_sdk_pay_info_background"
                android:hint="@string/sogou_game_sdk_feed_back_input_hint"
                android:inputType="number"
                android:maxLength="15"
                android:paddingLeft="10dp"
                android:singleLine="true" >

                <requestFocus />
            </EditText>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/sogou_game_sdk_feed_back_issues_label"
                style="@style/sogou_game_sdk_list_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:text="@string/sogou_game_sdk_feed_back_issues_label_text" />

            <TextView
                android:id="@+id/sogou_game_sdk_feed_back_msg"
                style="@style/sogou_game_sdk_list_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/sogou_game_sdk_feed_back_issues_label"
                android:text="@string/sogou_game_sdk_feed_back_msg" />
        </RelativeLayout>

        <EditText
            android:id="@+id/sogou_game_sdk_feed_back_issues_input"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:gravity="center_vertical|top"
            android:height="192dp"
            android:inputType="textMultiLine"
            android:maxLength="300" />

        <Button
            android:id="@+id/sogou_game_sdk_feed_back_submitBtn"
            style="@style/sogou_game_sdk_pay_bt_red"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/sogou_game_sdk_bt_red"
            android:text="@string/sogou_game_sdk_feed_back_submitBtn_label"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/sogou_game_sdk_feed_back_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/sogou_game_sdk_feed_back_info_string" />
    </LinearLayout>

</ScrollView>