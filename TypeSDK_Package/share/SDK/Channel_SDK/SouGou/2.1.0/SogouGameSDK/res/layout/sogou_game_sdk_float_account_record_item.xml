<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:clickable="false"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/sogou_game_sdk_float_account_record_time"
        android:layout_width="0dp"
        android:layout_height="27dp"
        android:layout_weight="1"
        android:gravity="left|center_vertical"
        android:text="0000:000:00：000:"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/sogou_game_sdk_float_account_record_pname"
        android:layout_width="0dp"
        android:layout_height="27dp"
        android:layout_weight="1"
        android:paddingLeft="10dp"
        android:gravity="left|center_vertical"
        android:text="支付宝安全支付"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/sogou_game_sdk_float_account_record_umoney"
        android:layout_width="0dp"
        android:layout_height="27dp"
        android:layout_weight="1"

        android:paddingLeft="20dp"
        android:gravity="left|center_vertical"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/sogou_game_sdk_float_account_record_amount"
        android:layout_width="0dp"
        android:layout_height="27dp"
        android:layout_weight="1"
        android:paddingLeft="20dp"
        android:gravity="left|center_vertical"
        android:text="@string/sogou_game_sdk_float_account_record_amount"
        android:textSize="12sp"/>
</LinearLayout>