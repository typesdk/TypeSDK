<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <com.sogou.gamecenter.sdk.views.CircleNetworkImage
        android:id="@+id/sogou_game_sdk_main_dialog_top_head_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/sogou_game_sdk_default_portrait">
    </com.sogou.gamecenter.sdk.views.CircleNetworkImage>

    <TextView
        android:id="@+id/sogou_game_sdk_main_dialog_top_head_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sogou_game_sdk_main_dialog_top_head_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text=""
        android:textColor="@color/sogou_game_sdk_color_111111"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/sogou_game_sdk_main_dialog_top_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sogou_game_sdk_main_dialog_top_head_tv"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="25dp" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="13dp">

            <LinearLayout
                android:id="@+id/sogou_game_sdk_main_dialog_head_tip1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <com.sogou.gamecenter.sdk.views.CircleNetworkImage
                    android:id="@+id/sogou_game_sdk_main_dialog_head_iv1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal">
                </com.sogou.gamecenter.sdk.views.CircleNetworkImage>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="个人中心"
                    android:textColor="@color/sogou_game_sdk_color_111111"
                    android:textSize="13sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/sogou_game_sdk_news_iv"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignRight="@id/sogou_game_sdk_main_dialog_head_tip1"
                android:layout_marginLeft="-10dp"
                android:layout_alignTop="@id/sogou_game_sdk_main_dialog_head_tip1"
                android:src="@drawable/sogou_game_sdk_personal_center_msg_count"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/sogou_game_sdk_main_dialog_head_tip2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <com.sogou.gamecenter.sdk.views.CircleNetworkImage
                android:id="@+id/sogou_game_sdk_main_dialog_head_iv2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal" >
            </com.sogou.gamecenter.sdk.views.CircleNetworkImage>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="福利大厅"
                android:textColor="@color/sogou_game_sdk_color_111111"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sogou_game_sdk_main_dialog_head_tip3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <com.sogou.gamecenter.sdk.views.CircleNetworkImage
                android:id="@+id/sogou_game_sdk_main_dialog_head_iv3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal" >
            </com.sogou.gamecenter.sdk.views.CircleNetworkImage>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="客服中心"
                android:textColor="@color/sogou_game_sdk_color_111111"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sogou_game_sdk_main_dialog_head_tip4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <com.sogou.gamecenter.sdk.views.CircleNetworkImage
                android:id="@+id/sogou_game_sdk_main_dialog_head_iv4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal" >
            </com.sogou.gamecenter.sdk.views.CircleNetworkImage>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="活动大厅"
                android:textColor="@color/sogou_game_sdk_color_111111"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sogou_game_sdk_main_dialog_head_tip5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <com.sogou.gamecenter.sdk.views.CircleNetworkImage
                android:id="@+id/sogou_game_sdk_main_dialog_head_iv5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal" >
            </com.sogou.gamecenter.sdk.views.CircleNetworkImage>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="情报站"
                android:textColor="@color/sogou_game_sdk_color_111111"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sogou_game_sdk_main_dialog_head_tip6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <com.sogou.gamecenter.sdk.views.CircleNetworkImage
                android:id="@+id/sogou_game_sdk_main_dialog_head_iv6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal" >
            </com.sogou.gamecenter.sdk.views.CircleNetworkImage>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="新游力荐"
                android:textColor="@color/sogou_game_sdk_color_111111"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/sogou_game_sdk_main_dialog_top_line1"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@id/sogou_game_sdk_main_dialog_top_ll"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/sogou_game_sdk_color_f5f5f5" />

    <com.sogou.gamecenter.sdk.views.RatioLayout
        android:id="@+id/sogou_game_sdk_main_dialog_top_auto_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sogou_game_sdk_main_dialog_top_line1"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:visibility="gone" >

        <com.sogou.wan.common.NetworkImageView
            android:id="@+id/sogou_game_sdk_main_dialog_top_banner_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />
    </com.sogou.gamecenter.sdk.views.RatioLayout>

    <RelativeLayout
        android:id="@+id/sogou_game_sdk_main_dialog_top_new_activity_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sogou_game_sdk_main_dialog_top_auto_rl"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="最新活动"
            android:textColor="@color/sogou_game_sdk_color_111111"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sogou_game_sdk_main_dialog_head_more_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:text="更多"
            android:textColor="@drawable/sogou_game_sdk_main_dialog_top_tv_selector"
            android:textSize="17sp" />

        <RelativeLayout
            android:id="@+id/sogou_game_sdk_main_dialog_head_rl1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/sogou_game_sdk_main_dialog_head_more_tv"
            android:layout_marginTop="25dp"
            android:visibility="gone">

            <com.sogou.wan.common.NetworkImageView
                android:id="@+id/sogou_game_sdk_main_dialog_head_rl_iv1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY" >
            </com.sogou.wan.common.NetworkImageView>

            <TextView
                android:id="@+id/sogou_game_sdk_main_dialog_head_rl_name_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/sogou_game_sdk_main_dialog_head_rl_iv1"
                android:text="《诛仙》新服开测活动"
                android:textColor="@color/sogou_game_sdk_color_111111"
                android:textSize="14.5sp" />

            <TextView
                android:id="@+id/sogou_game_sdk_main_dialog_head_rl_des_tv1"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/sogou_game_sdk_main_dialog_head_rl_iv1"
                android:singleLine="true"
                android:text="实物大奖等你!礼包多到你手软~"
                android:textColor="@color/sogou_game_sdk_color_888888"
                android:textSize="12.5sp" />

            <Button
                android:id="@+id/sogou_game_sdk_main_dialog_head_rl_see_btn1"
                android:layout_width="75dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/sogou_game_sdk_bt_green"
                android:text="查看详情"
                android:textColor="@color/sogou_game_sdk_color_ffffff"
                android:textSize="13sp" />
        </RelativeLayout>

        <View
            android:id="@+id/sogou_game_sdk_main_dialog_head_line1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/sogou_game_sdk_main_dialog_head_rl1"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/sogou_game_sdk_color_dddddd"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/sogou_game_sdk_main_dialog_head_rl2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/sogou_game_sdk_main_dialog_head_line1"
            android:visibility="gone">

            <com.sogou.wan.common.NetworkImageView
                android:id="@+id/sogou_game_sdk_main_dialog_head_rl_iv2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY" >
            </com.sogou.wan.common.NetworkImageView>

            <TextView
                android:id="@+id/sogou_game_sdk_main_dialog_head_rl_name_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/sogou_game_sdk_main_dialog_head_rl_iv2"
                android:text="《诛仙》新服开测活动"
                android:textColor="@color/sogou_game_sdk_color_111111"
                android:textSize="14.5sp" />

            <TextView
                android:id="@+id/sogou_game_sdk_main_dialog_head_rl_des_tv2"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/sogou_game_sdk_main_dialog_head_rl_iv2"
                android:singleLine="true"
                android:text="实物大奖等你!礼包多到你手软~"
                android:textColor="@color/sogou_game_sdk_color_888888"
                android:textSize="12.5sp" />

            <Button
                android:id="@+id/sogou_game_sdk_main_dialog_head_rl_see_btn2"
                android:layout_width="75dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/sogou_game_sdk_bt_green"
                android:text="查看详情"
                android:textColor="@color/sogou_game_sdk_color_ffffff"
                android:textSize="13sp" />
        </RelativeLayout>

        <View
            android:id="@+id/sogou_game_sdk_main_dialog_head_line2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/sogou_game_sdk_main_dialog_head_rl2"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/sogou_game_sdk_color_dddddd"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/sogou_game_sdk_main_dialog_head_rl3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/sogou_game_sdk_main_dialog_head_line2"
            android:visibility="gone">

            <com.sogou.wan.common.NetworkImageView
                android:id="@+id/sogou_game_sdk_main_dialog_head_rl_iv3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY" >
            </com.sogou.wan.common.NetworkImageView>

            <TextView
                android:id="@+id/sogou_game_sdk_main_dialog_head_rl_name_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/sogou_game_sdk_main_dialog_head_rl_iv3"
                android:text="《诛仙》新服开测活动"
                android:textColor="@color/sogou_game_sdk_color_111111"
                android:textSize="14.5sp" />

            <TextView
                android:id="@+id/sogou_game_sdk_main_dialog_head_rl_des_tv3"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/sogou_game_sdk_main_dialog_head_rl_iv3"
                android:singleLine="true"
                android:text="实物大奖等你!礼包多到你手软~"
                android:textColor="@color/sogou_game_sdk_color_888888"
                android:textSize="12.5sp" />

            <Button
                android:id="@+id/sogou_game_sdk_main_dialog_head_rl_see_btn3"
                android:layout_width="75dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/sogou_game_sdk_bt_green"
                android:text="查看详情"
                android:textColor="@color/sogou_game_sdk_color_ffffff"
                android:textSize="13sp" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/sogou_game_sdk_main_dialog_top_line2"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@id/sogou_game_sdk_main_dialog_top_new_activity_rl"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/sogou_game_sdk_color_f5f5f5" />

    <RelativeLayout
        android:id="@+id/sogou_game_sdk_main_dialog_top_new_game_recom_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sogou_game_sdk_main_dialog_top_line2" >

        <TextView
            android:id="@+id/sogou_game_sdk_main_dialog_top_head_new_game_recom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingLeft="20dp"
            android:text="新游力荐"
            android:textColor="@color/sogou_game_sdk_color_111111"
            android:textSize="17sp"
            android:textStyle="bold" />

        <com.sogou.gamecenter.sdk.views.MyHorizontalScrollView
            android:id="@+id/sogou_game_sdk_main_dialog_top_hsv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sogou_game_sdk_main_dialog_top_head_new_game_recom"
            android:scrollbars="none" >

            <LinearLayout
                android:id="@+id/sogou_game_sdk_main_dialog_top_head_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
            </LinearLayout>
        </com.sogou.gamecenter.sdk.views.MyHorizontalScrollView>
    </RelativeLayout>

    <View
        android:id="@+id/sogou_game_sdk_main_dialog_top_line3"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@id/sogou_game_sdk_main_dialog_top_new_game_recom_rl"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/sogou_game_sdk_color_f5f5f5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/sogou_game_sdk_main_dialog_top_line3"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="20dp"
        android:text="飙升榜"
        android:textColor="@color/sogou_game_sdk_color_111111"
        android:textSize="17sp"
        android:textStyle="bold" />

</RelativeLayout>