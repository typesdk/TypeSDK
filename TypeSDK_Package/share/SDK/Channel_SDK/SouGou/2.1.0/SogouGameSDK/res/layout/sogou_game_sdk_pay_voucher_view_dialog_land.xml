<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="420dp"
    android:layout_height="280dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/sogou_game_sdk_pay_voucher_view_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="13dp"
        android:text="@string/sogou_game_sdk_pay_voucher_view_tv1"
        android:textColor="@color/sogou_game_sdk_color_c72f2a"
        android:textSize="13sp" />

    <Button
        android:id="@+id/sogou_game_sdk_pay_voucher_view_bt"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/sogou_game_sdk_pay_voucher_view_bt_close" />

    <ListView
        android:id="@+id/sogou_game_sdk_pay_voucher_view_lv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/sogou_game_sdk_pay_voucher_view_tv"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:dividerHeight="10dp"
        android:listSelector="@color/sogou_game_sdk_transparent"
        android:scrollbars="none" >
    </ListView>

    <TextView
        android:id="@+id/sogou_game_sdk_pay_voucher_view_untv"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/sogou_game_sdk_pay_voucher_view_lv"
        android:layout_marginRight="60dp"
        android:layout_marginTop="13dp"
        android:text="@string/sogou_game_sdk_pay_voucher_view_tv2"
        android:textColor="@color/sogou_game_sdk_color_black"
        android:textSize="15sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/sogou_game_sdk_empty_view"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_below="@id/sogou_game_sdk_pay_voucher_view_tv"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/myapp_non_download_img" />

        <TextView
            android:id="@+id/txt_empty_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="44dp"
            android:text="@string/blank_page_manager_msg"
            android:textColor="#999999"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>