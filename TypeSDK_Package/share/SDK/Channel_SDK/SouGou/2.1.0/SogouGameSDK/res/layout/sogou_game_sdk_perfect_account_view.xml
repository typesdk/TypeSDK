<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="267dp"
    android:layout_height="160dp"
    android:background="@drawable/sogou_game_sdk_login_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="11dp"
            android:layout_marginTop="13dp" >

            <TextView
                android:id="@+id/sogou_game_sdk_reg_account_perfect_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:text="@string/sogou_game_sdk_reg_account_perfect"
                android:textColor="@color/sogou_game_sdk_color_000000"
                android:textSize="16sp" />

            <Button
                android:id="@+id/sogou_game_sdk_reg_account_perfect_close_view_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/sogou_game_sdk_bt_close" />
        </RelativeLayout>

        <TextView
            android:id="@+id/sogou_game_sdk_reg_account_perfect_point_out1_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:text="@string/sogou_game_sdk_reg_account_perfect_point_out1"
            android:textColor="@color/sogou_game_sdk_color_7d7d7d"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/sogou_game_sdk_reg_account_perfect_point_out2_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="6dp"
            android:text="@string/sogou_game_sdk_reg_account_perfect_point_out2"
            android:textColor="@color/sogou_game_sdk_color_7d7d7d"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="33dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="19dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/sogou_game_sdk_reg_account_perfect_back_btn"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@drawable/sogou_game_sdk4_bt_gray"
                android:text="@string/sogou_game_sdk_reg_account_perfect_btn_back"
                android:textColor="@color/sogou_game_sdk_color_ffffff"
                android:textSize="14sp" />

            <Button
                android:id="@+id/sogou_game_sdk_reg_account_perfect_btn_right_away_perfect_btn"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/sogou_game_sdk_bt_red"
                android:text="@string/sogou_game_sdk_reg_account_perfect_btn_right_away_perfect"
                android:textColor="@color/sogou_game_sdk_color_ffffff"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>