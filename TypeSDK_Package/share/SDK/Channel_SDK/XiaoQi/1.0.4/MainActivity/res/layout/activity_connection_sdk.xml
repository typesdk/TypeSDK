<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    tools:context=".CustomerServicesActivity" >
        
   <include 
        android:id="@+id/connection_title_rl"
        layout="@layout/item_main_title_rl"        
        />
 	<ScrollView
 	    android:layout_below="@+id/connection_title_rl"
 	    android:layout_width="match_parent"
 	    android:layout_height="match_parent"
 	    android:scrollbars="none"
 	    android:layout_centerHorizontal="true"
 	     >
   
    <LinearLayout
        android:layout_width="@dimen/activity_horizontal_width"
        android:layout_height="150dip" 
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"       
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginTop="20dip" >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginLeft="15dip"
            android:orientation="horizontal"
             >
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="玩家Q群:"
                 android:textColor="#000000"
                 android:textSize="16sp"
                 android:layout_gravity="center_vertical"
                 />
             <TextView
                 android:id="@+id/connection_qq_tv"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="16sp"
                 android:layout_marginLeft="15dip"
                 android:textColor="@color/text_green"
                 android:layout_gravity="center_vertical"
                 />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginLeft="15dip"
            android:orientation="horizontal"
             >
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="客服电话:"
                 android:textColor="#000000"
                 android:textSize="16sp"
                 android:layout_gravity="center_vertical"
                 />
             <TextView
                 android:id="@+id/connection_telephone_tv"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="16sp"
                 android:layout_marginLeft="15dip"
                 android:textColor="@color/text_green"
                 android:layout_gravity="center_vertical"
                 />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginLeft="15dip"
            android:orientation="horizontal"
             >
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="服务时间:"
                 android:textColor="#000000"
                 android:textSize="16sp"
                 android:layout_gravity="center_vertical"
                 />
             <TextView
                 android:id="@+id/connection_time_tv"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="16sp"
                 android:layout_marginLeft="15dip"
                 android:textColor="@color/text_green"
                 android:layout_gravity="center_vertical"
                 />
        </LinearLayout>
    </LinearLayout>
  </ScrollView>
</RelativeLayout>