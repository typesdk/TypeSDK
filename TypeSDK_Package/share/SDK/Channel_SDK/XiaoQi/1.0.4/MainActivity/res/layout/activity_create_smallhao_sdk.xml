<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"   
    android:orientation="vertical" >
    
	<include 
        android:id="@+id/create_smallhao_title_rl"
        layout="@layout/item_main_title_rl"        
        />
	<ScrollView	   
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:scrollbars="none"
	    android:layout_gravity="center_horizontal" 	    
	    >
	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"  
	    >
	<TextView 
	    android:layout_marginTop="30dip"
	    android:layout_width="@dimen/activity_horizontal_width"
        android:layout_gravity="center_horizontal"
	    android:layout_height="wrap_content"
	    android:text="请输入小号名称"
	    android:textColor="#333333"
	    android:gravity="center_horizontal"
	    />
	<EditText
	    android:id="@+id/create_smallhao_username_et"
	    android:layout_marginTop="10dip"
	    android:layout_width="@dimen/activity_horizontal_width"
        android:layout_gravity="center_horizontal"
	    android:layout_height="40dip"
	    android:textSize="14sp"
	    android:background="@drawable/create_smallhao_white_bg"
	    android:hint="小号名称不能大于8个字符!"
	    android:paddingLeft="10dip"
	    android:imeOptions="flagNoExtractUi"
	    style="@style/et_tc_textColorHint"	    
	    />
	<Button
        android:id="@+id/create_smallhao_commit_btn" 
        android:layout_width="@dimen/activity_horizontal_width"
        android:layout_gravity="center_horizontal"
        android:layout_height="40dip" 
        android:background="@drawable/green_radio_bg"
        android:layout_marginTop="20dip"
        android:text="完成"
        android:textSize="16sp"
        android:textColor="#ffffff"
        />
	</LinearLayout>
	
	</ScrollView>
	
</LinearLayout>
