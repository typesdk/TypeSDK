<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_payrecord_bg"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_marginTop="10dip"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="@color/text_green" >

        <TextView
            android:id="@+id/item_payrecord_tv_first"
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_centerVertical="true"
            android:text="充值时间:"
            android:textColor="@color/white" />
        
        <TextView 
            android:id="@+id/item_payrecord_tv_paydate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_payrecord_tv_first"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:text="2016-05-18 18:00:00"
            />
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="vertical"
        android:background="@color/white"
        >
        <TextView
            android:paddingTop="5dip"
            android:layout_width="50dip"
            android:layout_height="wrap_content"
            android:text="订单号:"
            android:textColor="#00cc99"
            android:layout_marginLeft="15dip"
            android:gravity="center"
            />
        <TextView 
            android:id="@+id/item_payrecord_tv_ordernumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:textColor="#00cc99"
            android:text="XHJFD15665156456"
            android:paddingBottom="5dip"
            />
        <View
        android:id="@+id/item_payrecord_line_first"
        android:layout_width="match_parent"
        android:layout_height="1dip"       
        android:background="@color/line" 
        />
    </LinearLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="@color/white"
         >

        <TextView
            android:id="@+id/item_payrecord_tv_second"
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_centerVertical="true"
            android:text="充值金额:"
            android:textColor="#ff6666" />
        
        <TextView 
            android:id="@+id/item_payrecord_tv_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_payrecord_tv_second"
            android:layout_centerVertical="true"
            android:textColor="#ff6666"
            android:text="1.00"
            />
        <View
        android:layout_alignParentBottom="true"
        android:id="@+id/item_payrecord_line_second"
        android:layout_width="match_parent"
        android:layout_height="1dip"       
        android:background="@color/line" 
        />
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="@color/white"
         >

        <TextView
            android:id="@+id/item_payrecord_tv_third"
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_centerVertical="true"
            android:text="充值方式:"
            android:textColor="#ff6666" />
        
        <TextView 
            android:id="@+id/item_payrecord_tv_payway"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_payrecord_tv_third"
            android:layout_centerVertical="true"
            android:textColor="#ff6666"
            android:text="支付宝支付"
            />
        <View
        android:layout_alignParentBottom="true"
        android:id="@+id/item_payrecord_line_third"
        android:layout_width="match_parent"
        android:layout_height="1dip"       
        android:background="@color/line" 
        />
    </RelativeLayout>

</LinearLayout>
