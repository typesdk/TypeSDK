<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_login"
    android:layout_width="fill_parent"
    android:layout_height="220dip"
    android:layout_centerInParent="true"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/sdk_edit_two_bg"

    android:paddingLeft="18dip"
    android:paddingRight="18dip">

    <LinearLayout
        android:id="@+id/huo_ll_uRegisterLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#ffffff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/huo_iv_uRegisterLogo"
            android:layout_width="0.0px"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1.0"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="1dip"
            android:layout_height="40dp"
            android:background="@color/gray5" />

        <TextView
            android:id="@+id/huo_tv_uRegisterTitle"
            android:layout_width="0.0px"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="一键注册"
            android:textColor="@color/blues"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/huo_iv_uRegisterInput"
        android:layout_width="fill_parent"
        android:layout_height="82dp"
        android:layout_below="@id/huo_ll_uRegisterLogo"
        android:background="@drawable/sdk_edit_two_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/huo_ll_uRegisterAccount"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="0.5dp"
            android:layout_marginRight="0.5dp"
            android:layout_marginTop="0.5dp"
            android:background="#e8ecf3">

            <ImageView
                android:id="@+id/img_pwd_log"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:background="@drawable/huo_ic_login_mobile" />

            <TextView
                android:layout_width="0.5dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:background="#c8c8c8" />

            <EditText
                android:id="@+id/huo_et_uRegisterAccount"
                android:layout_width="fill_parent"
                android:layout_height="35dip"
                android:maxLength="16"
                android:layout_gravity="center_vertical"
                android:background="@drawable/sdk_edit_three_bg"
                android:hint="请输入帐号"
                android:paddingLeft="10dip"
                android:paddingRight="30dip"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#c8c8c8"
                android:textSize="14dip" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e8ecf3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="0.5dp"
            android:layout_marginRight="0.5dp"
            android:layout_marginTop="0.5dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:background="@drawable/sdk_pwd_log" />

            <TextView
                android:layout_width="0.5dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:background="#c8c8c8" />

            <EditText
                android:id="@+id/huo_et_uRegisterPwd"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dip"
                android:background="@null"
                android:hint="请输入密码"
                android:paddingLeft="10dip"
                android:paddingRight="30dip"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textColorHint="#c8c8c8"
                android:maxLength="16"
                android:textSize="14dip" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:id="@+id/huo_img_show_pwd"
                android:layout_alignTop="@+id/huo_iv_loginForget_pwd"
                android:layout_toLeftOf="@+id/huo_iv_loginForget_pwd"
                android:src="@drawable/sdk_yanjing" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/huo_btn_uRegisterSubmit"
        android:layout_width="match_parent"
        android:layout_height="38dip"
        android:layout_below="@id/huo_iv_uRegisterInput"
        android:layout_marginTop="12dp"
        android:background="@drawable/huo_sdk_login_in"
        android:text="完成注册"
        android:textColor="@android:color/white"
        android:textSize="16dip" />

    <RelativeLayout
        android:id="@+id/huo_rl_uRegisterBackLogin"
        android:layout_width="80dip"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/huo_btn_uRegisterSubmit">

        <TextView
            android:layout_width="80dip"
            android:layout_height="40dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="返回登陆"
            android:textColor="@color/blacks"
            android:textSize="14dip"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/huo_login_arrows_right" />
    </RelativeLayout>


</RelativeLayout>