	     <solid android:color="#9e9e9f" />
	     <corners android:radius="@dimen/corners_size_4dp" />    
		</shape>
    </item>
    <item >
        <shape>
	     <solid android:color="#0087d1" />
	     <corners android:radius="@dimen/corners_size_4dp" />    
		</shape>
    </item>
</selector>
