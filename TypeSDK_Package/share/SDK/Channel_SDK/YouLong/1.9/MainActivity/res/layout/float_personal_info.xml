<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/personal_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="15.0dip" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_personal_logo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription=""
                android:src="@drawable/personal_default_avatar" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10.0dip"
                android:layout_toRightOf="@id/iv_personal_logo"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/et_personal_iname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxWidth="160dp"
                    android:singleLine="true"
                    android:text="19196玩家昵称"
                    android:textColor="#3F3F3F"
                    android:textSize="18dp"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/et_nickname"
                    android:layout_width="160dp"
                    android:layout_height="26dp"
                    android:background="@drawable/personal_nickname_et"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:hint="请输入昵称"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_personal_iname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@id/et_personal_iname"
                    android:src="@drawable/_yl_edit_rolename_icon"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btn_update_iname"
                    android:layout_width="50dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="10.0dp"
                    android:layout_toRightOf="@id/et_nickname"
                    android:background="@drawable/personal_nickname_btn"
                    android:gravity="center"
                    android:text="修改"
                    android:textColor="#FF8400"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30.0dip"
                    android:text="账号："
                    android:textColor="#656565"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_float_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30.0dip"
                    android:layout_toRightOf="@id/tv2"
                    android:background="@null"
                    android:singleLine="true"
                    android:text="you001"
                    android:textColor="#656565"
                    android:textSize="14sp" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/personal_et_bg"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/layout_update_pwd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="16.0dp"
                android:paddingRight="20.0dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20.0dp"
                    android:src="@drawable/personal_update_pwd_icon" />

                <TextView
                    style="@style/personal_tv_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="修改密码" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/personal_arrow_right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginTop="10dp"
                android:background="#E0E0E0" />

            <LinearLayout
                android:id="@+id/layout_user_safety"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="7dp"
                android:gravity="center_vertical"
                android:paddingLeft="16.0dp"
                android:paddingRight="20.0dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20.0dp"
                    android:src="@drawable/personal_user_safety_icon" />

                <TextView
                    style="@style/personal_tv_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="账号安全" />

                <TextView
                    android:id="@+id/tv_safety_state"
                    style="@style/personal_tv_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:visibility="visible" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/personal_arrow_right" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/personal_et_bg"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/layout_pay_record"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="16.0dp"
                android:paddingRight="20.0dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20.0dp"
                    android:src="@drawable/personal_pay_info_icon" />

                <TextView
                    style="@style/personal_tv_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="充值记录" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/personal_arrow_right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginTop="10dp"
                android:background="#E0E0E0" />

            <LinearLayout
                android:id="@+id/layout_voucher"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="16.0dp"
                android:paddingRight="20.0dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20.0dp"
                    android:src="@drawable/personal_my_vou_icon" />

                <TextView
                    style="@style/personal_tv_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="我的代金券" />

                <TextView
                    android:id="@+id/tv_voucher_num"
                    style="@style/personal_tv_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0张" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/personal_arrow_right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginTop="10dp"
                android:background="#E0E0E0" />

            <LinearLayout
                android:id="@+id/layout_lb_pay"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="16.0dp"
                android:paddingRight="20.0dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20.0dp"
                    android:src="@drawable/personal_lb_pay_icon" />

                <TextView
                    style="@style/personal_tv_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="龙币充值" />

                <TextView
                    android:id="@+id/tv_lb_balance"
                    style="@style/personal_tv_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="龙币余额：0" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/personal_arrow_right" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/bnt_switch_account"
            style="@style/login_button_land"
            android:background="@drawable/login_button_icon"
            android:text="切换账号" />

    </LinearLayout>

</LinearLayout>