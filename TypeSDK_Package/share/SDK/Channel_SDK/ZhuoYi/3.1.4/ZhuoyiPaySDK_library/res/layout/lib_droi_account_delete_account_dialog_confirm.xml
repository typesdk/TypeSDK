<?xml version="1.0" encoding="utf-8" ?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/lib_droi_account_global_margin_left"
        android:paddingRight="@dimen/lib_droi_account_global_margin_right"
        android:orientation="vertical"
        android:minHeight="64dp">
        
    	<TextView android:id="@+id/lib_droi_account_my_title"
    	    android:layout_width="match_parent"
    	    android:layout_height="@dimen/lib_droi_account_global_button_height"
    	    android:gravity="center_vertical"/>
    	
        <com.droi.account.widget.AccountEditText android:id="@+id/lib_droi_account_password"
           android:layout_width="match_parent"
           android:layout_height="@dimen/lib_droi_account_global_button_height"
           android:background="@drawable/lib_droi_account_edittext_selector"
           android:paddingLeft="5dp"
           android:paddingRight="5dp"
           style="@style/LibDroiAccountPasswordStyle"
           android:textColorHint="@color/lib_droi_account_edit_text_color"
           android:hint="@string/lib_droi_account_login_password_hint" />

</LinearLayout>