<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
        android:gravity="center_vertical"
	    android:layout_marginLeft="@dimen/lib_droi_account_global_margin_left"
	    android:layout_marginRight="@dimen/lib_droi_account_global_margin_right"
	    android:orientation="vertical" >

			<LinearLayout android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_alignParentBottom="true"
			    android:orientation="vertical">
			    
			    <ImageView android:id="@+id/lib_droi_account_image_view" 
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center_horizontal"
			        android:scaleType="centerInside"
			        android:src="@drawable/lib_droi_account_welcome_logo"/>
			    
			    <Button android:id="@+id/lib_droi_account_btn_register"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
				    android:gravity="center"
			        android:text="@string/lib_droi_account_welcome_register"
			        android:layout_marginTop="@dimen/lib_droi_account_welcome_btn_register_margin_top"
			        android:background="@drawable/lib_droi_account_register_button_selector"
			        android:textColor="#29bd68"/>
			    <!-- 				 -->
			    <Button android:id="@+id/lib_droi_account_btn_login"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:text="@string/lib_droi_account_welcome_login_exit"
			        android:gravity="center"
			        android:background="@drawable/lib_droi_account_button_selector"
			        android:textColor="@android:color/white"/>
			    
			    <Button android:id="@+id/lib_droi_account_btn_delete"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:text="Delete Account"
			        android:visibility="gone"
			        android:background="@drawable/lib_droi_account_button_selector"
			        android:textColor="@android:color/white"/>
			    
			    <LinearLayout android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:orientation="horizontal"
			        android:layout_marginTop="5dp"
			        android:gravity="center_horizontal"
			        android:layout_marginLeft="10dp"
			        android:layout_marginRight="10dp">
			        
			        <Button android:id="@+id/lib_droi_account_btn_qq_login"
			        	android:layout_width="wrap_content"
			        	android:layout_height="wrap_content"
			        	android:drawableTop="@drawable/lib_droi_account_btn_qq_selector"
			        	android:textColor="#959aa2"
			        	android:background="@null"
			        	android:layout_weight="1"
			        	android:text="@string/lib_droi_account_welcome_qq_login"
			        	android:textSize="12sp"/>
			            
			        <Button android:id="@+id/lib_droi_account_btn_weibo_login"
			        	android:layout_width="wrap_content"
			        	android:layout_height="wrap_content"
			        	android:drawableTop="@drawable/lib_droi_account_btn_weibo_selector"
			        	android:textColor="#959aa2"
			        	android:background="@null"
			        	android:layout_weight="1"
			        	android:text="@string/lib_droi_account_welcome_weibo_login"
			        	android:textSize="12sp"/>
			    </LinearLayout>
			</LinearLayout>
</RelativeLayout>
