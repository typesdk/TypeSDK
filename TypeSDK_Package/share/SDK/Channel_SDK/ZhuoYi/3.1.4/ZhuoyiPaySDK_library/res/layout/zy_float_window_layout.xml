<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/zy_float_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/zy_float_content_height"
    android:layout_centerVertical="true"
    android:layout_marginTop="12dp"
    android:background="@drawable/zy_float_content_bg">

    <RelativeLayout
        android:id="@+id/zy_float_center_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/zt_person_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="@string/zy_person_center"
            android:textColor="@color/zy_float_content_textcolor"
            android:textSize="@dimen/zy_float_content_textsize"/>

        <View
            android:id="@+id/zy_float_line_pay_center"
            android:layout_width="@dimen/zy_float_line_width"
            android:layout_height="@dimen/zy_float_line_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/zy_float_line_margin"
            android:layout_toRightOf="@id/zt_person_center"
            android:background="@color/zy_float_line_color"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/zy_float_pay_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/zy_float_center_layout">


        <TextView
            android:id="@+id/zy_float_pay_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/zy_text_margin_image"
            android:text="@string/zy_pay"
            android:textColor="@color/zy_float_content_textcolor"
            android:textSize="@dimen/zy_float_content_textsize"/>

        <View
            android:id="@+id/zy_float_line_pay"
            android:layout_width="@dimen/zy_float_line_width"
            android:layout_height="@dimen/zy_float_line_height"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/zy_float_line_margin"
            android:layout_toRightOf="@id/zy_float_pay_text"
            android:background="@color/zy_float_line_color"/>

        <ImageView
            android:id="@+id/zy_pay_red_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/zy_float_pay_text"
            android:src="@drawable/zy_red_point"
            android:visibility="invisible"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/zy_float_activity_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/zy_float_line_margin"
        android:layout_toRightOf="@id/zy_float_pay_layout">


        <TextView
            android:id="@+id/zy_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:text="@string/zy_activity"
            android:textColor="@color/zy_float_content_textcolor"
            android:textSize="@dimen/zy_float_content_textsize"/>

        <ImageView
            android:id="@+id/zy_activity_red_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/zy_activity"
            android:src="@drawable/zy_red_point"
            android:visibility="invisible"/>

        <View
            android:id="@+id/zy_acitivity_line"
            android:layout_width="@dimen/zy_float_line_width"
            android:layout_height="@dimen/zy_float_line_height"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/zy_float_line_margin"
            android:layout_toRightOf="@id/zy_activity"
            android:background="@color/zy_float_line_color"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/zy_float_gift_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/zy_float_line_margin"
        android:layout_toRightOf="@id/zy_float_activity_layout"
        android:visibility="visible">


        <TextView
            android:id="@+id/zy_gift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:text="@string/zy_gift"
            android:textColor="@color/zy_float_content_textcolor"
            android:textSize="@dimen/zy_float_content_textsize"/>

        <ImageView
            android:id="@+id/zy_gift_red_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/zy_gift"
            android:src="@drawable/zy_red_point"
            android:visibility="invisible"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/zy_float_strategy_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/zy_float_line_margin"
        android:layout_toRightOf="@id/zy_float_gift_layout"
        android:visibility="gone">

        <TextView
            android:id="@+id/zy_strategy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/zy_text_margin_image"
            android:text="@string/zy_strategy"
            android:textColor="@color/zy_float_content_textcolor"
            android:textSize="@dimen/zy_float_content_textsize"/>

        <ImageView
            android:id="@+id/zy_strategy_red_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/zy_strategy"
            android:src="@drawable/zy_red_point"
            android:visibility="gone"/>
    </RelativeLayout>

</RelativeLayout>
